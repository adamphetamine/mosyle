#!/bin/sh
# Export $PATH so the script can find the binaries
export PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin/

# Set the required variables
client=""
token=""

# Don’t install if netclient doesn’t exist
netclient=/usr/local/bin/netclient
if [ ! -f "$netclient" ]; 
 then 
	echo "netclient not found. Please install it first."
  exit 1
else

# Find machine Serial number (Mosyle variables)
echo Serial %SerialNumber% 
# Next find machine users long name (Mosyle variables)
echo Name %FullName% 
# Let's see if it worked
echo joining Netmaker network for %SerialNumber% %FullName% 
cd /usr/local/
sudo netclient join --name "%SerialNumber%""-""%FullName%" -t $token
echo joined "%SerialNumber%"" ""%FullName% " to $client network

fi
exit 0
